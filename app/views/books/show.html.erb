<div class='container'>
  <div class='row'>
     <%= render 'books/list', book: @new_book,user: current_user %>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
      <tr>
       <td><%= attachment_image_tag @user, :profile_image %></td>
       <td><%= @book.title %></td>
       <td><%= @book.body %></td>

      <% if current_user.id == @user.id %>
       <td><%= link_to "Edit",edit_book_path(@book) %> </td>
       <td><%= link_to "Destroy",book_path(@book),method: :delete %></td>
       <% end %>
      </tr>
  </tbody>
</table>
    </div>
  </div>
</div>
