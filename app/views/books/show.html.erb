<% if @book.errors.any? %>
  <%= @book.errors.count %>件のerrorが発生しました
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>


<div class='container'>
  <div class='row'>
     <%= render 'books/list', book: @new_book,user: @user %>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
      <tr>
       <td>
         <%= link_to user_path(@book.user.id) do %>
           <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%><br>
           <%= @book.user.name %>
         <% end %>
         </td>
       <td>
         <%= link_to book_path(@book.id) do %>
         <%= @book.title %>
         <% end %>
         </td>
       <td><%= @book.body %></td>

      <% if current_user.id == @user.id %>
       <td><%= link_to "Edit",edit_book_path(@book) %> </td>
       <td><%= link_to "Destroy",book_path(@book),method: :delete %></td>
       <% end %>
      </tr>
  </tbody>
</table>
    </div>
  </div>
</div>
