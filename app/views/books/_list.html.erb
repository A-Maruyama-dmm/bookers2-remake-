    <div class='col-md-3'>
      <h2>User info</h2>
      <%= attachment_image_tag user, :profile_image %>
      <table class='table'>
        <tr> </tr>
        <tr>
	      <th>name</th>
	      <th><%= user.name %></th>
        </tr>
        <tr>
	      <th>introduction</th>
	      <th><%= user.introduction %></th>
        </tr>
       </table>
       <div class='row'>
      <%= link_to edit_user_path(user) do %>
      <span class= "btn btn-outline-secondary btn-block fas fa-user-cog"></span>
      <% end %>

       </div>
        <h2>New books</h2>
          <%= form_with model:book, local:true do |f| %>

          <div class="form-group">
          <label for="book_title">Title</label>
          <%= f.text_field :title %>
          </div>

          <div class="form-group">
          <label for="book_title">Opinion</label>
          <%= f.text_area :body %>
          </div>

           <%= f.submit "Create Book", class: "btn btn-success" %>

            <% end %>

  </div>

