<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <% @book.errors.full_messages.each do |message| %>
  <%= message %>
  <% end %>
<% end %>
<h2>Editing Book</h2>
<%= form_with model:@book, local:true do |f| %>
  <label for="inputName">Title</label>
  <%= f.text_field :title, autofocus: true, id:"inputName", placeholder:"名前"%>


  <label for="inputImage">Opinion</label>
  <%= f.text_area :body %>
  <%= f.submit "Update Book" %>
  <%= link_to "Show",book_path(@book) %>
  <%= link_to "Back",book_path(@book) %>
<% end %>
